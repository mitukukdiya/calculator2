<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/am_cal_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculator"
        android:textColor="@color/black"
        android:textSize="35dp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>
    
    <LinearLayout
        android:id="@+id/am_cal_11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/am_cal_tv"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NO 1:"
            android:inputType="number"
            android:textSize="20dp"/>

        <EditText
            android:id="@+id/am_cal_et1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


    </LinearLayout>


    <LinearLayout
        android:id="@+id/am_cal_112"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/am_cal_11"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NO 2:"
            android:textSize="20dp"/>

        <EditText
            android:id="@+id/am_cal_et2"
            android:inputType="number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>




    </LinearLayout>


    <LinearLayout
        android:id="@+id/am_cal_113"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/am_cal_112"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">
        
        <Button
            android:id="@+id/am_cal_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            android:textSize="20dp"/>
        <Button
            android:id="@+id/am_cal_sub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:layout_marginLeft="7dp"
            android:textSize="20dp"/>

        <Button
            android:id="@+id/am_cal_mul"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*"
            android:layout_marginLeft="7dp"
            android:textSize="20dp"/>
        <Button
            android:id="@+id/am_cal_div"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:text="/"
            android:textSize="20dp" />



    </LinearLayout>

    <LinearLayout
        android:id="@+id/am_cal_114"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/am_cal_113"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Answer ="
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/am_calc_answer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>





    </LinearLayout>




</RelativeLayout>